# Enable rewrite engine
RewriteEngine On

# Set base directory
RewriteBase /Car-Rent/

# Handle 404 errors - redirect to custom 404 page
ErrorDocument 404 /Car-Rent/public/404.php

# If the requested file or directory doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Rewrite all requests to the 404 page
RewriteRule ^(.*)$ public/404.php [L]

# Allow access to assets and other directories
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>
